<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3 input-group input-group-lg">
            <form action="" method="post">
                <hr>
                <label for="name">Celebrity Name:
                    <input class="form-control" class="form-control" type="text">

                </label>
                <hr>
                <hr>
                <label for="occupation">Celebrity Occupation:
                    <input class="form-control" class="form-control" type="text">

                </label>
                <hr>
                <hr>
                <label for="catchPhrase">Celebrity Catchphrase:
                    <input class="form-control" class="form-control" type="text">

                </label>
                <hr>
                <button class="btn btn-outline-light btn-block" type="submit">Submit</button>
            </form>
            {{#if errorMessage}}
            <div style="margin-top: 20px; padding: 5px; color: white; background: rgba(182, 50, 50, 0.877); text-align: center; font-size: .95em">
                {{errorMessage}}</div>
            {{/if}}
        </div>
    </div>
</div>

