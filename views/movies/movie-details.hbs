<div class="container">

    <h1>Movie details</h1>
    <hr>

    <p>- <strong> {{title}} </strong><br>
        <hr>
        <small>
            <ul>
                <strong>Cast</strong>:
                {{#each cast}}
                <li>
                    {{name}} |<br> {{occupation}} |<br> <em>"{{catchPhrase}}"</em>
                </li>
                {{/each}}
            </ul>
<hr>
            Genre: {{genre}} <br>
            Plot: {{plot}} <br>
        </small>
        <hr>
        <form action="/movies/{{id}}/delete" method="post">
        <button type="submit" class="btn btn-outline-light"> <strong>Delete</strong></button></form>
    </p>


</div>